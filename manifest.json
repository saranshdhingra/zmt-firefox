{

	"manifest_version": 2,
	"name": "Zoho Mail Tracker",
	"version": "2.3.1",

	"description": "This extensions helps you track the emails you send using Zoho Mail.",

	"icons": {
		"16": "images/logo16.png",
		"32": "images/logo32.png",
		"48": "images/logo48.png",
		"64": "images/logo64.png",
		"128": "images/logo128.png"
	},
	"browser_action": {
		"default_icon": {
			"19": "images/logo32.png",
			"38": "images/logo48.png"
		},
		"default_title": "ZMT Options"
	},
	"options_ui": {
		"page": "options.html",
		"browser_style": true
	},
	"background": {
		"scripts": ["js/environment.js", "js/helpers.js", "js/pubnub.js", "js/background.js"]
	},
	"permissions":["storage"]

}